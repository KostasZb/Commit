@model IEnumerable<WebApplication3.Models.CauseModel>

@{
    ViewBag.Title = "View the Causes";
}

<h1 class="pageTitle">Running Causes</h1>


@* Text input for searching with keyword and dropdown with options regarding the type of cause that enable filtering with jquery*@
<div class="container justify-content-center rounded p-2">
    <div class="row  p-2 m-2">
        <select class="form-control mb-3 col-5" id="causeTypeDropdown">
            <option disabled="" selected="" value="">Select a type of Cause</option>
            <option class="taxAvoidFilter" value="TaxAvoidance">Tax avoidance</option>
            <option class="unfairEmplFilter" value="UnfairEmployment">Unfair employment practices</option>
            <option class="racismFilter" value="Racism">Racism</option>
            <option class="environmentFilter" value="Environment">Environmental damage</option>
            <option class="otherFilter" value="Other">Other unethical practice</option>
        </select>
        <span class="col-2"></span>
        <input class="form-control col-5 mb-3" id="searchBar" type="text" placeholder="Search...">
        <div class="col-4"></div>
    </div>
</div>
@*Dynamically creating the layout of the available causes*@
<div class="row mt-3 justify-content-center" id="causesSection">
    @foreach (var item in Model)
    {
        <div class="card-deck m-2 col-lg-2 col-md-6 bg-light rounded" id="causeCard">
            <div class="card-body">
                <img class="card-img-top img-fluid rounded-circle TypeOfPhoto @Html.DisplayFor(modelItem => item.causetype)" src="" alt="Cause image" id="@Html.DisplayFor(modelItem => item.causetype)" />
                <h5 class="card-title font-weight-bold">@Html.DisplayFor(modelItem => item.name)</h5>
                <p class="card-text">Involved Organisation: @Html.DisplayFor(modelItem => item.orgInvolved)</p>
                <p class="card-text signatureCount" id="@Html.DisplayFor(modelItem => item.id)">
                    @Html.DisplayFor(modelItem => item.PeopleSigned.Count) commited!
                </p>
                @Html.ActionLink("View the Cause", "CauseDetailsPage", "Causes", new { id = item.id }, new { @class = "btn btn-secondary" })
            </div>
        </div>
    }
</div>
@section Scripts
    {
    <script>
    </script>
}
